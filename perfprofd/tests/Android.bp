// Build the unit tests.

cc_defaults {
    name: "perfprofd_test_defaults",

    cflags: [
        "-Wall",
        "-Werror",
        "-O0",
        "-g",
    ],
    cppflags: [
        "-Wno-sign-compare",
        "-Wno-unused-parameter",
    ],

    strip: {
        keep_symbols: true,
    },
}

//
// Unit test for perfprofd
//
cc_test {
    name: "perfprofd_test",
    defaults: [
        "perfprofd_test_defaults",
    ],
    test_suites: ["device-tests"],

    stl: "libc++",
    static_libs: [
        "libperfprofdcore",
        "libperfprofd_elf_read",
        "libbase",
    ],
    shared_libs: [
        "libprotobuf-cpp-lite",
        "liblog",
    ],
    srcs: [
        "perfprofd_test.cc",
    ],
    data: [
        "canned.perf.data",
        "callchain.canned.perf.data",
    ],
}
